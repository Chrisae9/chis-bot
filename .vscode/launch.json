    "version": "0.2.0",
    "configurations": [


        {
            "name": "chis-bot",
            "type": "python",
            "request": "launch",
            "program": "src/bot.py",
            "console": "integratedTerminal"
        },        {
            "name": "chis-bot-sudo",
            "type": "python",
            "request": "launch",
            "program": "src/bot.py",
            "console": "integratedTerminal",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "Sudo"
            ]
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
